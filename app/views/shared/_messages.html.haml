- unless flash.blank?
  .background-white.p30.mb30
    - flash.each do |name, msg|
      .alert.alert-dismissable{class: (name == 'notice' ? "alert-success" : "alert-error"), role: "alert" }
        %button.close{data:{dismiss:"alert"}, aria: {label: "Close"}}
          %i.fa.fa-times{aria:{hidden: "true"}}
        %strong
          = msg